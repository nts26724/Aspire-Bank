<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aspire_cream_background"
    tools:context=".ui.savings.SavingsActivity">

    <com.example.app.ui.customeview.AppBarView
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/nav_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_screen_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/adamina"
                        android:text="Tài khoản tiết kiệm"
                        android:textColor="@color/aspire_orange_primary"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_source_account"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/adamina"
                            android:text="*******123"
                            android:textColor="@color/aspire_dark_text"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_source_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/adamina"
                            android:text="100.000.000đ"
                            android:textColor="@color/aspire_dark_text"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/adamina"
                        android:text="Chọn kỳ hạn gửi"
                        android:textColor="@color/aspire_orange_primary"
                        android:textSize="14sp" />

                    <GridLayout
                        android:id="@+id/grid_terms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:useDefaultMargins="true">

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:backgroundTint="#FFF3E0"
                            android:fontFamily="@font/adamina"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:text="1 tháng\n3.5%/năm"
                            android:textColor="@color/aspire_dark_text"
                            app:cornerRadius="12dp" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:backgroundTint="#F5F5F5"
                            android:fontFamily="@font/adamina"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:text="3 tháng\n4.5%/năm"
                            android:textColor="@color/aspire_dark_text"
                            app:cornerRadius="12dp" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:backgroundTint="#F5F5F5"
                            android:fontFamily="@font/adamina"
                            android:text="6 tháng\n5.5%/năm"
                            android:textColor="@color/aspire_dark_text"
                            app:cornerRadius="12dp" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:backgroundTint="#F5F5F5"
                            android:fontFamily="@font/adamina"
                            android:text="12 tháng\n6.5%/năm"
                            android:textColor="@color/aspire_dark_text"
                            app:cornerRadius="12dp" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:backgroundTint="#F5F5F5"
                            android:fontFamily="@font/adamina"
                            android:text="24 tháng\n7.2%/năm"
                            android:textColor="@color/aspire_dark_text"
                            app:cornerRadius="12dp" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:backgroundTint="#F5F5F5"
                            android:fontFamily="@font/adamina"
                            android:text="36 tháng\n7.5%/năm"
                            android:textColor="@color/aspire_dark_text"
                            app:cornerRadius="12dp" />
                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/adamina"
                        android:text="Số tiền gửi"
                        android:textColor="@color/aspire_dark_text" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Style.App.TextInputLayout.Transfer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:boxBackgroundColor="#EEEEEE">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_savings_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/adamina"
                            android:hint="0 VND"
                            android:inputType="numberDecimal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/aspire_dark_text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/adamina"
                            android:text="Số tiền tối thiểu:"
                            android:textSize="12sp"
                            android:textColor="@color/aspire_dark_text"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/adamina"
                            android:text="1.000.000 đ"
                            android:textSize="12sp"
                            android:textColor="@color/aspire_dark_text"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/adamina"
                            android:text="Số tiền tối đa:"
                            android:textSize="12sp"
                            android:textColor="@color/aspire_dark_text"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/adamina"
                            android:text="1.000.000.000 đ"
                            android:textSize="12sp"
                            android:textColor="@color/aspire_dark_text"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_5m"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:backgroundTint="#FFF3E0"
                            android:text="5M"
                            android:textColor="@color/aspire_dark_text"
                            android:fontFamily="@font/adamina"
                            style="@style/Widget.MaterialComponents.Button.TextButton"/>
                        <Button
                            android:id="@+id/btn_10m"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:backgroundTint="#FFF3E0"
                            android:text="10M"
                            android:textColor="@color/aspire_dark_text"
                            android:fontFamily="@font/adamina"
                            style="@style/Widget.MaterialComponents.Button.TextButton"/>
                        <Button
                            android:id="@+id/btn_50m"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:backgroundTint="#FFF3E0"
                            android:text="50M"
                            android:textColor="@color/aspire_dark_text"
                            android:fontFamily="@font/adamina"
                            style="@style/Widget.MaterialComponents.Button.TextButton"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Kỳ hạn"
                            android:fontFamily="@font/adamina"
                            android:textColor="@color/aspire_dark_text"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lãi suất"
                            android:fontFamily="@font/adamina"
                            android:textColor="@color/aspire_dark_text"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_term_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1 tháng"
                            android:fontFamily="@font/adamina"
                            android:textColor="@color/aspire_orange_primary"/>
                        <TextView
                            android:id="@+id/tv_rate_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.5%/năm"
                            android:fontFamily="@font/adamina"
                            android:textColor="@color/aspire_orange_primary"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tiền gốc"
                            android:fontFamily="@font/adamina"
                            android:textColor="@color/aspire_dark_text"/>
                        <TextView
                            android:id="@+id/tv_principal_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10.000.000 đ"
                            android:fontFamily="@font/adamina"
                            android:textColor="@color/aspire_dark_text"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tiền lãi dự kiến"
                            android:fontFamily="@font/adamina"
                            android:textColor="@color/aspire_dark_text"/>
                        <TextView
                            android:id="@+id/tv_interest_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+29.167 đ"
                            android:fontFamily="@font/adamina"
                            android:textColor="@color/aspire_orange_primary"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginVertical="8dp" android:background="#EEEEEE"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tổng tiền nhận được"
                            android:fontFamily="@font/adamina"
                            android:textColor="@color/aspire_dark_text"/>
                        <TextView
                            android:id="@+id/tv_total_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10.029.167 đ"
                            android:fontFamily="@font/adamina"
                            android:textColor="@color/aspire_orange_primary"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="#EEEEEE"
                        android:padding="8dp"
                        android:fontFamily="@font/adamina"
                        android:textSize="10sp"
                        android:textColor="@color/aspire_dark_text"
                        android:text="Sau 1 tháng, bạn sẽ nhận được 10.029.167đ khi đáo hạn"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_submit_savings"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/adamina"
                android:text="Xác nhận gửi tiết kiệm"
                android:textColor="@color/aspire_dark_text"
                android:textAllCaps="false"
                android:backgroundTint="@color/aspire_light_orange_background"
                app:cornerRadius="999dp" />

        </LinearLayout>
    </ScrollView>

    <com.example.app.ui.customeview.NavBarView
        android:id="@+id/nav_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>