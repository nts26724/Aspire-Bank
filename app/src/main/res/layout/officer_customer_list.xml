<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:background="@color/officer_sidebar_bg"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="40dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_aspire_logo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aspire Bank"
                    android:fontFamily="@font/adamina"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#0B3B59"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_home"
                    app:tint="@color/aspire_dark_text" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/adamina"
                    android:text="Dashboard"
                    android:textColor="@color/aspire_dark_text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_rounded_card"
                android:backgroundTint="@color/white">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_person"
                    app:tint="@color/aspire_dark_text" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/adamina"
                    android:text="Quản lý khách hàng"
                    android:textStyle="bold"
                    android:textColor="@color/aspire_dark_text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:layout_marginTop="8dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_grid"
                    app:tint="@color/aspire_dark_text" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/adamina"
                    android:text="Quản lý lãi suất"
                    android:textColor="@color/aspire_dark_text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:layout_marginTop="8dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_ekyc"
                    app:tint="@color/aspire_dark_text" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/adamina"
                    android:text="Xác minh eKYC"
                    android:textColor="@color/aspire_dark_text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:layout_marginTop="8dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_person"
                    app:tint="@color/aspire_dark_text" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/adamina"
                    android:text="Hồ sơ cá nhân"
                    android:textColor="@color/aspire_dark_text"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.75"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quản lý Khách hàng"
                android:fontFamily="@font/adamina"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/aspire_dark_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quản lý thông tin tài khoản và danh sách khách hàng."
                android:fontFamily="@font/adamina"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="#555555"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#D6EAF8"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Danh sách Khách hàng"
                            android:fontFamily="@font/adamina"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/aspire_dark_text"/>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thêm khách hàng"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            android:backgroundTint="#5D99C6"
                            android:textColor="@color/white"
                            app:cornerRadius="20dp"
                            android:paddingHorizontal="16dp"/>
                    </LinearLayout>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_rounded_card"
                        android:backgroundTint="#6FA3CC"
                        android:hint="Tìm theo tên, số tài khoản, điện thoại"
                        android:textColorHint="#E0E0E0"
                        android:paddingStart="16dp"
                        android:textSize="14sp"
                        android:layout_marginBottom="24dp"
                        android:textColor="@color/white"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="12dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:text="Số tài khoản"
                            android:fontFamily="@font/adamina"
                            android:textSize="13sp"
                            android:textColor="@color/aspire_dark_text"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="Tên khách hàng"
                            android:fontFamily="@font/adamina"
                            android:textSize="13sp"
                            android:textColor="@color/aspire_dark_text"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:text="Số điện thoại"
                            android:fontFamily="@font/adamina"
                            android:textSize="13sp"
                            android:textColor="@color/aspire_dark_text"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.8"
                            android:text="Email"
                            android:fontFamily="@font/adamina"
                            android:textSize="13sp"
                            android:textColor="@color/aspire_dark_text"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="Trạng thái"
                            android:fontFamily="@font/adamina"
                            android:textSize="13sp"
                            android:textColor="@color/aspire_dark_text"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:text="0123456789"
                            android:textSize="13sp"
                            android:textColor="@color/aspire_dark_text"
                            android:fontFamily="@font/adamina"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="Nguyen Van A"
                            android:textSize="13sp"
                            android:textColor="@color/aspire_dark_text"
                            android:fontFamily="@font/adamina"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:text="0123456789"
                            android:textSize="13sp"
                            android:textColor="@color/aspire_dark_text"
                            android:fontFamily="@font/adamina"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.8"
                            android:text="nva@gmail.com"
                            android:textSize="13sp"
                            android:textColor="@color/aspire_dark_text"
                            android:fontFamily="@font/adamina"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hoạt động"
                            android:textSize="11sp"
                            android:textColor="#006400"
                            android:fontFamily="@font/adamina"
                            android:background="@drawable/bg_rounded_card"
                            android:backgroundTint="#90EE90"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:text="0123456789"
                            android:textSize="13sp"
                            android:textColor="@color/aspire_dark_text"
                            android:fontFamily="@font/adamina"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="Tran Thi B"
                            android:textSize="13sp"
                            android:textColor="@color/aspire_dark_text"
                            android:fontFamily="@font/adamina"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:text="0987654321"
                            android:textSize="13sp"
                            android:textColor="@color/aspire_dark_text"
                            android:fontFamily="@font/adamina"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.8"
                            android:text="ttb@gmail.com"
                            android:textSize="13sp"
                            android:textColor="@color/aspire_dark_text"
                            android:fontFamily="@font/adamina"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Khóa"
                            android:textSize="11sp"
                            android:textColor="#A04000"
                            android:fontFamily="@font/adamina"
                            android:background="@drawable/bg_rounded_card"
                            android:backgroundTint="#FFCCBC"
                            android:paddingHorizontal="20dp"
                            android:paddingVertical="6dp"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>