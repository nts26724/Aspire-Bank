<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aspire_cream_background"
    tools:context=".OtpActivity">

    <include layout="@layout/app_bar" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/adamina"
                android:text="Xác thực OTP"
                android:textColor="@color/aspire_dark_text"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/adamina"
                android:gravity="center"
                android:text="Vui lòng nhập mã OTP vừa gửi đến số điện thoại của bạn"
                android:textColor="@color/aspire_dark_text"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/otp_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <EditText
                    style="@style/Style.App.EditText.Otp"
                    android:layout_width="30dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/aspire_dark_text" />

                <EditText
                    style="@style/Style.App.EditText.Otp"
                    android:layout_width="30dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/aspire_dark_text" />

                <EditText
                    style="@style/Style.App.EditText.Otp"
                    android:layout_width="30dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/aspire_dark_text" />

                <EditText
                    style="@style/Style.App.EditText.Otp"
                    android:layout_width="30dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/aspire_dark_text" />

                <EditText
                    style="@style/Style.App.EditText.Otp"
                    android:layout_width="30dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/aspire_dark_text" />

                <EditText
                    style="@style/Style.App.EditText.Otp"
                    android:layout_width="30dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:textColor="@color/aspire_dark_text" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_confirm_otp"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/adamina"
                android:text="Xác nhận"
                android:textColor="@color/aspire_dark_text"
                android:backgroundTint="@color/aspire_light_orange_background"
                app:cornerRadius="999dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel_otp"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/adamina"
                android:text="Hủy"
                android:textColor="@color/aspire_dark_text"
                android:backgroundTint="@color/aspire_gray_button_bg"
                app:cornerRadius="999dp" />

            <TextView
                android:id="@+id/tv_resend_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/adamina"
                android:text="Gửi lại mã OTP"
                android:textColor="@color/aspire_orange_primary"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- THANH FOOTER TRỐNG (GIỮ NGUYÊN) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer_layout"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>