<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aspire_cream_background"
    tools:context=".TransferFragment">

    <include layout="@layout/app_bar" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nav_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggle_button_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    app:singleSelection="true"
                    app:checkedButton="@+id/btn_tab_internal">

                    <Button
                        android:id="@+id/btn_tab_internal"
                        style="@style/Widget.App.Button.Toggle.Transfer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nội Bộ" />

                    <Button
                        android:id="@+id/btn_tab_external"
                        style="@style/Widget.App.Button.Toggle.Transfer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ngân hàng khác" />

                </com.google.android.material.button.MaterialButtonToggleGroup>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tv_transfer_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/adamina"
                        android:text="Chuyển tiền nội bộ" android:textColor="@color/aspire_dark_text"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/layout_external_bank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            style="@style/Style.App.TextView.TransferLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Chọn ngân hàng" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Style.App.TextInputLayout.Transfer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">
                            <AutoCompleteTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/adamina"
                                android:textColor="@color/aspire_dark_text"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <TextView
                        style="@style/Style.App.TextView.TransferLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Số tài khoản" />
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Style.App.TextInputLayout.Transfer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/adamina"
                            android:inputType="number"
                            android:textColor="@color/aspire_dark_text"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        style="@style/Style.App.TextView.TransferLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Số tiền" />
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Style.App.TextInputLayout.Transfer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/adamina"
                            android:inputType="numberDecimal"
                            android:textColor="@color/aspire_dark_text"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        style="@style/Style.App.TextView.TransferLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Nội dung chuyển khoản" />
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Style.App.TextInputLayout.Transfer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/adamina"
                            android:textColor="@color/aspire_dark_text"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_submit_transfer"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/adamina"
                        android:text="Chuyển tiền"
                        android:textColor="@color/aspire_dark_text"
                        android:backgroundTint="@color/aspire_light_orange_background"
                        app:cornerRadius="999dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/nav_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>