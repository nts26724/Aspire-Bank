<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aspire_cream_background"
    tools:context=".TransferSuccessActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/header_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_aspire_logo"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aspire Bank"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/adamina"
            android:textColor="@color/aspire_dark_text"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/header_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:id="@+id/tv_success_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:text="Giao dịch thành công"
                android:textColor="@color/aspire_dark_text"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/label_sender"
                style="@style/Style.App.TextView.ReceiptLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Tên người gửi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_success_title" />

            <TextView
                android:id="@+id/tv_sender_name"
                style="@style/Style.App.TextView.ReceiptValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyen Van A"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/label_sender" />

            <TextView
                android:id="@+id/label_receiver"
                style="@style/Style.App.TextView.ReceiptLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Tên người nhận"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_sender" />

            <TextView
                android:id="@+id/tv_receiver_name"
                style="@style/Style.App.TextView.ReceiptValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyen Van A"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/label_receiver" />

            <TextView
                android:id="@+id/label_bank"
                style="@style/Style.App.TextView.ReceiptLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Ngân hàng"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_receiver" />

            <TextView
                android:id="@+id/tv_bank_name"
                style="@style/Style.App.TextView.ReceiptValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vietin Bank"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/label_bank" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_bank_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="label_bank, tv_bank_name"
                android:visibility="visible" />
            <TextView
                android:id="@+id/label_amount"
                style="@style/Style.App.TextView.ReceiptLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Số tiền"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_bank" />

            <TextView
                android:id="@+id/tv_amount"
                style="@style/Style.App.TextView.ReceiptValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100.000.000 VND"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/label_amount" />

            <TextView
                android:id="@+id/label_content"
                style="@style/Style.App.TextView.ReceiptLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Nội dung"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_amount" />

            <TextView
                android:id="@+id/tv_content"
                style="@style/Style.App.TextView.ReceiptValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaaa"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/label_content" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_continue_transaction"
                style="@style/Style.App.Button.Success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiếp tục giao dịch"
                android:textColor="@color/aspire_dark_text"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintEnd_toStartOf="@+id/btn_save_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_content" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save_image"
                style="@style/Style.App.Button.Success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lưu hình ảnh"
                android:textColor="@color/aspire_dark_text"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_continue_transaction"
                app:layout_constraintTop_toTopOf="@id/btn_continue_transaction" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_go_home"
                style="@style/Style.App.Button.Success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang chủ"
                android:textColor="@color/aspire_dark_text"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_continue_transaction" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer_layout"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>